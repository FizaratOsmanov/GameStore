@{
    Layout = null;
}

@using GameStore.DAL.Models;
@model IEnumerable<Review>;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f4;
            padding-top: 50px;
        }

        .contact-page {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .contact-page textarea {
                border: 1px solid #ccc;
                border-radius: 5px;
                padding: 15px;
                width: 100%;
                height: 120px;
                font-size: 16px;
                margin-bottom: 15px;
            }

            .contact-page button {
                width: 100%;
                background-color: #ff7043;
                color: #fff;
                border: none;
                padding: 15px;
                font-size: 18px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .contact-page button:hover {
                    background-color: #ff5722;
                }
    </style>
</head>
<body>

    <div class="container contact-page section">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="right-content">
                    <h2 class="text-center mb-4">Send us a message</h2>
                    <form id="contact-form" action="" method="post">
                        <div class="form-group">
                            <textarea name="game" id="game" placeholder="Game Name" class="form-control" required></textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="message" id="message" placeholder="Your Message" class="form-control" required></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" id="form-submit" class="btn btn-primary">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
