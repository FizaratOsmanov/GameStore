@{
    Layout = null;
}
@using GameStore.DAL.Models;
@model IEnumerable<Review>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Reviews</h4>
                        <p class="card-description mb-4">
                            <a class="btn btn-primary" asp-controller="Review" asp-action="Create">
                                <i class="fas fa-plus-circle"></i> Create Review
                            </a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th class="text-center">Game</th>
                                        <th class="text-center">Comment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (Review item in Model)
                                        {
                                            <tr>
                                                <td class="py-1 text-center">@item.Id</td>
                                                <td class="text-center">@item.GameId</td>
                                                <td>@item.Comment</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center">No reviews available.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
