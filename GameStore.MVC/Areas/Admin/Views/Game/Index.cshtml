@using GameStore.DAL.Models;
@model IEnumerable<Game>;
@{
    string disabled = string.Empty;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Games</h4>
                        <p class="card-description">
                            <a asp-action="Create">Create</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            GameID
                                        </th>
                                        <th>
                                            Img
                                        </th>
                                        <th>
                                            Is deleted?!
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (Game item in Model)
                                        {
                                            <tr>
                                                <td class="py-1">@item.Id</td>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>

                                                <td>@item.Price</td>
                                                <td>@item.GameID</td>
                                                <td>
                                                    <img style="object-fit:cover" src="~/assets/GameFolder/@item.Img" />
                                                </td>
                                                <td>@item.IsDeleted</td>
                                                <td>
                                                    <a class="btn btn-primary mr-2" asp-action="Info" asp-route-id="@item.Id">Info</a>
                                                    <a class="btn btn-warning mr-2" style="color:#fff;" asp-area="Admin" asp-controller="Game" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                    <a class="btn btn-danger mr-2 @disabled" asp-action="SoftDelete" asp-route-id="@item.Id">SoftDelete</a>
                                                    <a class="btn btn-danger mr-2 @disabled" asp-action="HardDelete" asp-route-id="@item.Id">HardDelete</a>

                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="3">No game available.</td></tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>